<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.esa.beuth.testdriveassist.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_activity_main_menu_1"
            style="@style/MainMenuButtonImages"
            android:layout_weight="1"
            android:src="@color/colorPrimaryDark" />

        <ImageView
            android:id="@+id/iv_activity_main_menu_2"
            style="@style/MainMenuButtonImages"
            android:layout_weight="1"
            android:src="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="@string/activity_main_menu_1"
            style="@style/MainMenuText"
            android:id="@+id/tv_activity_main_menu_1" />

        <TextView
            android:text="@string/activity_main_menu_2"
            style="@style/MainMenuText"
            android:id="@+id/tv_activity_main_menu_2" />

    </LinearLayout>


</RelativeLayout>
